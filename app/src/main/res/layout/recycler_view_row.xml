<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:visibility="visible">


    <!--<androidx.cardview.widget.CardView-->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:foregroundGravity="center_horizontal"
        android:visibility="visible"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#BEC5D1"
        app:strokeWidth="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView3"
                android:layout_width="390dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedCorner"
                tools:srcCompat="@tools:sample/avatars" />


            <TextView
                android:id="@+id/textNume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_bold_imported"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#1F2937"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textAdresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#6B7280"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textOrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#018786"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/butonSpreRezervare"
                android:layout_width="390dp"
                android:layout_height="40dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:background="@drawable/round_border"
                android:elegantTextHeight="false"
                android:fontFamily="@font/inter_semi_bold"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Rezervă acum"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="13sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


