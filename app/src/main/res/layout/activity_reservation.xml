<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".ReservationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Restaurant image"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewNume"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="nume_restaurant" />

            <TextView
                android:id="@+id/textViewAdresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="adresa_restaurant" />

            <TextView
                android:id="@+id/textViewOrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="orar_restaurant" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                />

            <Spinner
                android:id="@+id/spinnerMese"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:contentDescription="Select the number of guests"
                android:padding="10dp"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/spinnerOre"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:contentDescription="Select the desired reservation time"
                android:padding="10dp"
                android:spinnerMode="dialog" />

            <Button
                android:id="@+id/butonRezerva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:insetTop="1dp"
                android:insetBottom="1dp"
                android:minHeight="49dp"
                android:text="RezervÄƒ"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>